generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Advogado {
  id_adv String @id @default(uuid())
  nome   String
  email  String
  senha  String

  create_at DateTime? @default(now()) // ? = quando quero que um campo aceite nullo
  update_at DateTime? @default(now())

  processos Processo[]

  @@map("advogados") //nome da tabela (bd)
}

model Categoria {
  id_cat String @id @default(uuid())
  nome   String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  processos Processo[]

  @@map("categorias")
}

model Processo {
  id_proc    String @id @default(uuid())
  numero     String
  nome_parte String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  categorias  Categoria @relation(fields: [categoriaId], references: [id_cat])
  categoriaId String

  clientes  Cliente @relation(fields: [clienteId], references: [id_cli])
  clienteId String

  Advogado   Advogado? @relation(fields: [advogadoId], references: [id_adv])
  advogadoId String?

  @@map("processos")
}

model Cliente {
  id_cli    String @id @default(uuid())
  nome      String
  documento String
  celular   String
  cep       String
  endereco  String
  numero    String
  bairro    String
  cidade    String
  estado    String

  processos Processo[]

  @@map("clientes")
}
